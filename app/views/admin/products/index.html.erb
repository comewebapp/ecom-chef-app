<div class="row">
  <%= link_to "Create New Product", new_admin_product_path %><br><br>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Image</th>
        <th scope="col">Chef</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Stock</th>
        <th scope="col">Price</th>
        <th scope="col">Weight</th>
        <th scope="col">Status</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th scope="row"><%= product.id %></th>
          <td><%= image_tag product.image_base64, width: 100 if product.image_base64.present? %></td>
          <td><%= product.user.try(:email) %></td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.available_quantity %></td>
          <td><%= product.price %></td>
          <td><%= product.weight %></td>
          <td><%= product.status_name %></td>
          <td><%= link_to "Mark as Approved", approve_admin_product_path(product.id), method: :put, data: { confirm: 'Are you sure?' } if product.is_pending?  %></td>
          <td><%= link_to "View", admin_product_path(product.id) %></td>
          <td><%= link_to "Edit", edit_admin_product_path(product.id) %></td>
          <td><%= link_to 'Destroy', admin_product_path(product.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>